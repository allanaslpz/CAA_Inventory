@model caa_mis.Models.Transaction

@{
    ViewData["Title"] = "Create";
}

<h4>Create Receiving/Transfer</h4>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" name="TransactionStatusID" id="TransactionStatusID" value="1">
    <div class="row">
        <div class="col-md-4 mb-3">
                <label asp-for="EmployeeID" class="control-label"></label>
                <select asp-for="EmployeeID" class="form-control" asp-items="ViewBag.EmployeeID"></select>
            
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="TransactionTypeID" class="control-label"></label>
            <select asp-for="TransactionTypeID" class ="form-control" asp-items="ViewBag.TransactionTypeID"></select>
            
        </div>
        <div class="col-md-4 mb-3">
                <label asp-for="TransactionDate" class="control-label"></label>
            <input asp-for="TransactionDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required/>
            <span asp-validation-for="TransactionDate" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="form-group">
                <label asp-for="OriginID" class="control-label"></label>
                <select asp-for="OriginID" class="form-control" asp-items="ViewBag.OriginID"></select>
                <span asp-validation-for="OriginID" class="text-danger"></span>
            </div>

        </div>
        <div class="col-md-4 mb-3">
            <div class="form-group">
                <label asp-for="DestinationID" class="control-label"></label>
                <select asp-for="DestinationID" class="form-control" asp-items="ViewBag.DestinationID"></select>
                <span asp-validation-for="DestinationID" class="text-danger"></span>
            </div>

        </div>
        <div class="col-md-4 mb-3">
            <div class="form-group">
                <label asp-for="Shipment" class="control-label"></label>
                <input asp-for="Shipment" class="form-control" />
                <span asp-validation-for="Shipment" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="form-group">
                <label asp-for="ReceivedDate" class="control-label"></label>
                <input asp-for="ReceivedDate" class="form-control" />
            </div>

        </div>
        <div class="col-md-4 mb-3">
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

        </div>
        
    </div>
    <div class="col-md-4 mb-3">
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</form>



<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
