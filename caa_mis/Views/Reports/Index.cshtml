@{
    ViewData["Title"] = "Reports Page";

}

@*Resources*@
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>
<script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://kit.fontawesome.com/49caa8d480.js" crossorigin="anonymous"></script>

<br/>
<div>
    <h1><center>CAA Niagara Marketing Inventory Reports</center></h1>
</div>
<br/>
<div class="container pt-5 pb-3">
    <div class="row">
        <div class="col">
            <div class="card border border-light">
                <a href="@Url.Action("StockSummaryByBranch","Items")" class="btn btn-primary stretched-link">
                <div class="card-body">
                        <i class="fas  fa-warehouse  fa-8x"></i>
                        <p class="card-text"><h5>Inventory Report</h5></p>
                </div>
                </a>
            </div>
        </div>
        <div class="col mb-3">
            <div class="card">
                <a href="@Url.Action("TransactionSummary","Transactions")" class="btn btn-primary stretched-link">
                <div class="card-body">
                        <i class="fas  fa-arrow-right-arrow-left  fa-8x"></i>
                        <p class="card-text"><h5>Transaction Report</h5></p>
                </div>
                </a>
            </div>
        </div>
        <div class="col mb-3">
            <div class="card">
                <a href="@Url.Action("TransactionItemSummary","TransactionItems")" class="btn btn-primary stretched-link">
                <div class="card-body">
                        <i class="fas  fa-boxes-packing fa-8x"></i>
                        <p class="card-text"><h5>Transferred Products</h5></p>
                </div>
                </a>
            </div>
        </div>
    </div> 
</div>

